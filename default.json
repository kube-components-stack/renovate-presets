{
  "packageRules": [
    {
      "datasources": [
        "helm",
        "github-releases"
      ],
      "matchUpdateTypes": ["minor", "patch", "major"]
    },
    {
      "packageNames": ["prometheus-community/helm-charts"],
      "versioning": "regex:(kube-prometheus-stack-)?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?"
    },
    {
      "packageNames": ["argoproj/argo-helm"],
      "versioning": "regex:(argo-cd-)?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.*/helm-generator\\.yaml$"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "(^|\\n)name:\\s+(?:&\\S+\\s+)?(?<depName>\\S+)",
        "(^|\\n)version:\\s+(?<currentValue>\\S+)",
        "(^|\\n)repo:\\s+(?<registryUrl>\\S+)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": [
        "^crds/kube-prometheus-stack/base/kustomization\\.yaml$",
        "^crds/argo-cd/base/kustomization\\.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "raw\\.githubusercontent\\.com\\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<currentValue>[^\\/]+)"
      ],
      "datasourceTemplate": "github-tags"
    }
  ]
}