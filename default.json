{
  "packageRules": [
    {
      "datasources": [
        "helm",
        "github-releases"
      ],
      "matchUpdateTypes": ["minor", "patch", "major"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.*/helm-generator\\.yaml$"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "(^|\\n)name:\\s+(?:&\\S+\\s+)?(?<depName>\\S+)",
        "(^|\\n)version:\\s+(?<currentValue>\\S+)",
        "(^|\\n)repo:\\s+(?<registryUrl>\\S+)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["^crds/kube-prometheus-stack/base/kustomization\\.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "raw\\.githubusercontent\\.com\\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<versioning>[^\\/]+-)(?<currentValue>[^\\/]+)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}